<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns.top">
            <block class="Magento\Cms\Block\Block" name="custom-slider">
                <arguments>
                    <argument name="block_id" xsi:type="string">bkrd_content_slider</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="page.bottom">
            <block class="Magento\Framework\View\Element\Template"
                   name="custom-page-bottom"
                   template="Magento_Theme::pagebottom/custom_page_bottom.phtml"/>
        </referenceContainer>
    </body>
</page>
